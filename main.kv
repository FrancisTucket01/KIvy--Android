<Login>
    MDCard:
        size_hint: None, None
        size: 250, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Colab"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            mode:  "round"

        ClickableTextFieldRound:
            size_hint_y: None
            height: password.height
            error: True

            MDTextFieldRound:
                id: password
                hint_text: "password"
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {"center_x": 0.5}
                password: True
                mode:  "round"

            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": 0.5}
                pos: password.width - self.width + dp(20), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password.password = False if password.password is True else True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.logger()

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5} 
            on_press: root.clear()           

        Widget:
            size_hint_y: None
            height: 10
        
    

<Home>
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Colab"
            right_action_items: [["magnify", lambda x:x], ["message-flash", lambda x:x], ["dots-vertical", lambda x:x ]]
        MDTabs:
            Tab:
                title: "Chats"
            Tab:
                title: "Groups"
                ScrollView:
                    MDList:
                        id: groups
                        md_bg_color: .1,.9,.8,1
                        
            Tab:
                title: "Projects"
                MDLabel:
                    text: "Projects Page"
                    halign: "center"
        MDRaisedButton:
            text: "Chat Screen"
            md_bg_color: .1,.4,.2,1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: 
                root.manager.transition.direction = 'left'
                app.root.current = "chat"
        MDRaisedButton:
            text: "Logout"
            md_bg_color: .1,.4,.2,1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: 
                root.manager.transition.direction = 'right'
                app.root.current = "login"

<Inner>
    MDBoxLayout:
        id: iner
        orientation: "vertical"
       
    MD3Card:
        padding: 16
        size_hint: None, None
        size: "300dp", "45dp"
        radius: [15, ]
        padding: [5,5,5,5]

        MDIconButton:
            type: "small"
            icon: "emoticon-happy"
            md_bg_color: .0,.0,.0,.0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        TextInput:
            hint_text: "Type Something"
            id: user
            font_size: dp(18)
            background_color: 0,0,0,0
            pos_hint: {"center_x": 0.01, "center_y": 0.5}
            mode: "rectangle"
        
        MDIconButton:
            type: "small"
            icon: "send"
            md_bg_color: .1,.4,.2,1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            #canvas.before:
            #    PushMatrix
            #    Rotate:
            #       angle: 45
            #       origin: self.center
            #        canvas.after:
            #            PopMatrix
    MDRaisedButton:
        text: "Back"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        md_bg_color: .1,.4,.2,1
        on_release: 
            root.manager.transition.direction = 'right'
            app.root.current = "home"

<Chat>
    MDBoxLayout:
        id: container
        MDLabel: 
            text: "Hello Chat Screen"
            halign: "center"
        MDRaisedButton:
            text: "Home Screen"
            md_bg_color: .1,.4,.2,1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: 
                root.manager.transition.direction = 'right'
                app.root.current = "home"